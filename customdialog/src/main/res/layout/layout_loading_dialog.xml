<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/loading_dialog_width"
    android:layout_height="wrap_content"
    android:padding="@dimen/loading_dialog_padding"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_round_white"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/loading_size"
        android:layout_height="@dimen/loading_size"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tv_load_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="loading..."
        android:layout_marginTop="@dimen/loading_text_margin"
        android:textColor="@color/colorTitleBlack"
        android:textSize="@dimen/loading_text_size" />
</LinearLayout>