<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="-10dp"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/line_space_extra"
        android:layout_marginTop="@dimen/margin_alert_dialog_content"
        android:layout_marginLeft="@dimen/margin_alert_dialog_content"
        android:layout_marginBottom="@dimen/margin_alert_dialog_content"
        android:layout_marginRight="@dimen/margin_alert_dialog_content"
        android:textSize="@dimen/content_text_size"
        android:textColor="@color/colorBlack"/>
    <View
        android:id="@+id/divider_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/colorLightGrey"/>

    <LinearLayout
        android:id="@+id/action_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_button_size"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_left"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textSize="@dimen/action_text_size"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:focusable="true" />

        <View
            android:id="@+id/divider_action"
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:background="@color/colorLightGrey"/>

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="match_parent"
            android:background="@drawable/bg_button_right"
            android:gravity="center"
            android:layout_weight="1.0"
            android:textStyle="bold"
            android:textSize="@dimen/action_text_size"
            android:textColor="@color/colorAccent"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>